			{
				"command": "llmTools.newPromptFromClipboard",
				"title": "New Prompt (From Clipboard)",
				"icon": "$(plus)",
				"category": "LLM Tools"
			},
			{
				"command": "llmTools.editPrompt",
				"title": "Edit Prompt",
				"icon": "$(edit)",
				"category": "LLM Tools"
			},
			{
				"command": "llmTools.renamePrompt",
				"title": "Rename Prompt",
				"icon": "$(edit)",
				"category": "LLM Tools"
			},
			{
				"command": "llmTools.openPrompt",
				"title": "Open Prompt",
