	"repository": {
		"type": "git",
		"url": "https://github.com/effixis/internal-vscode-llm-tools"
	},
	"categories": [
		"Data Science",
		"Machine Learning",
		"Other"
	],
	"keywords": [
		"gpt",
		"prompt",
		"embedded",
		"chat",
