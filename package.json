			},
			{
				"command": "llmTools.newChat",
				"title": "New Chat",
				"icon": "$(plus)",
				"category": "LLM Tools"
			},
			{
				"command": "llmTools.copyChatId",
				"title": "Copy Chat Id",
				"icon": "$(copy)",
				"category": "LLM Tools"
			},
			{
				"command": "llmTools.renameChat",
				"title": "Rename Chat",
				"icon": "$(plus)",
				"category": "LLM Tools"
			},
			{
				"command": "llmTools.exportChats",
